@model List<SocialNode.Mvc.ViewModels.UserViewModel>

@{
    var pageName = "Lista de amizades";
    ViewData["Title"] = pageName;
}

<div class="container-xl">
    <div class="row g-4">
        <div class="col">
            <div class="row row-cards">
                <div class="space-y">
                    @foreach (var user in Model)
                    {
                        <div class="card">
                            <div class="row g-0">
                                <div class="col-auto">
                                    <div class="card-body">
                                        <div class="avatar avatar-md d-flex align-items-center justify-content-center bg-secondary text-white">
                                            <i class="ti ti-user-circle fs-1"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="card-body ps-0">
                                        <div class="row">
                                            <div class="col">
                                                <h3 class="mb-0">@user.FullName</h3>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col d-flex justify-content-end">
                                                <div class="mt-3 badges">
                                                    <a asp-action="FriendList" asp-route-id="@user.Id" class="badge badge-outline text-secondary fw-normal badge-pill"><i class="ti ti-list-details"></i> Amigos</a>
                                                    <a asp-action="Add" asp-route-id="@user.Id" class="badge badge-outline text-secondary fw-normal badge-pill"><i class="ti ti-plus"></i> Adicionar</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>