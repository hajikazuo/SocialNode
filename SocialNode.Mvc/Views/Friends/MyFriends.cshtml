@model List<UserViewModel>

@{
    ViewData["Title"] = "Meus Amigos";
}

<div class="container-xl">
    <div class="row row-cards">
        @if (!Model.Any())
        {
            <p>Você ainda não possui amigos.</p>
        }
        else
        {
            @foreach (var user in Model)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="card">
                        <div class="card-body p-4 text-center">
                            <span class="avatar avatar-xl mb-3" style="background-image: url(./static/avatars/000m.jpg)"> </span>
                            <h3 class="m-0 mb-1"><a href="#">@user.FullName</a></h3>
                        </div>
                        <div class="d-flex">
                            <a asp-action="Friends" asp-route-id="@user.Id" class="card-btn">
                                <i class="ti ti-list-details"></i>
                                Ver lista de amizades
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>



