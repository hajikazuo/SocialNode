@model List<UserViewModel>

@{
    var pageName = "Sugestões de amizade";
    ViewData["Title"] = pageName;
}

<div class="container-xl">
    <div class="row row-cards">
        @foreach (var user in Model)
        {
            <div class="col-md-6 col-lg-3">
                <div class="card">
                    <div class="card-body p-4 text-center">
                        <div class="avatar avatar-md d-flex align-items-center justify-content-center bg-secondary text-white">
                            <i class="ti ti-user-circle fs-1"></i>
                        </div>
                        <h3 class="m-0 mb-1"><a href="#">@user.FullName</a></h3>
                    </div>
                    <div class="d-flex">
                        <a asp-action="Add" asp-route-id="@user.Id" class="card-btn">
                            <i class="ti ti-plus mx-2"></i>
                            Adicionar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>